<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/danSedmica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ponedjeljak: "
            android:textSize="36sp"
            android:fontFamily="@font/alatsi"
            android:textColor="#F48C2A"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/vrijeme1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="07:15-08:00"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#F48C2A"/>

                <TextView
                    android:id="@+id/vrijeme2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="08:05-08:50"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#F48C2A"/>

                <TextView
                    android:id="@+id/vrijeme3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="08:55-09:40"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#F48C2A"/>

                <TextView
                    android:id="@+id/vrijeme4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10:00-10:45"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#F48C2A"/>

                <TextView
                    android:id="@+id/vrijeme5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10:50-11:35"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#F48C2A"/>

                <TextView
                    android:id="@+id/vrijeme6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="11:40-12:25"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#F48C2A"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cas1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matematika"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#685D5C"/>

                <TextView
                    android:id="@+id/cas2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matematika"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#685D5C"/>

                <TextView
                    android:id="@+id/cas3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matematika"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#685D5C"/>

                <TextView
                    android:id="@+id/cas4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matematika"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#685D5C"/>

                <TextView
                    android:id="@+id/cas5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matematika"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#685D5C"/>

                <TextView
                    android:id="@+id/cas6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matematika"
                    android:textSize="20sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#685D5C"/>



            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#F48C2A"
            android:background="?android:attr/listDivider" />



    </LinearLayout>

</FrameLayout>